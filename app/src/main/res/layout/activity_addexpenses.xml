<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99D0C3" >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="407dp"
        android:layout_height="699dp"
        android:layout_marginBottom="-25dp"
        android:background="#F1FFF3"
        app:cardBackgroundColor="#F1FFF3"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="-136dp"
                tools:layout_editor_absoluteY="-139dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="44dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="92dp"
                    android:fontFamily="@font/poppins"
                    android:text="Date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="164dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="36dp"
                    android:fontFamily="@font/poppins"
                    android:text="Transaction Type : "
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editMessage"
                    android:layout_width="288dp"
                    android:layout_height="84dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="40dp"
                    android:background="#DFF7E2"
                    android:ems="10"
                    android:hint="Enter Message"
                    android:inputType="text"
                    android:singleLine="false"
                    android:textColor="#1E2E0D"
                    android:textSize="15sp"
                    app:circularflow_defaultRadius="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTitle" />

                <Button
                    android:id="@+id/btnSaveTransaction"
                    android:layout_width="162dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="122dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="122dp"
                    android:backgroundTint="#FFF7E7"
                    android:text="Save"
                    android:textColor="#1E2E0D"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editMessage" />

                <EditText
                    android:id="@+id/editAmount"
                    android:layout_width="285dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="8dp"
                    android:background="#DFF7E2"
                    android:digits="0123456789."
                    android:ems="10"
                    android:hint="Amount"
                    android:inputType="numberDecimal"
                    android:textSize="15sp"
                    app:circularflow_defaultRadius="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />


                <EditText
                    android:id="@+id/editTitle"
                    android:layout_width="285dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="8dp"
                    android:background="#DFF7E2"
                    android:ems="10"
                    android:hint="Title"
                    android:inputType="text"
                    android:textSize="15sp"
                    app:circularflow_defaultRadius="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins"
                    android:text="Category"
                    android:textSize="15sp"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editDate" />


                <EditText
                    android:id="@+id/editDate"
                    android:layout_width="285dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="8dp"
                    android:background="#DFF7E2"
                    android:clickable="true"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Select Date"
                    android:textSize="15sp"
                    app:circularflow_defaultRadius="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="287dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="66dp"
                    android:background="#DFF7E2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <Spinner
                    android:id="@+id/spinnerTransactionType"
                    android:layout_width="131dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="31dp"
                    android:background="#DFF7E2"
                    android:foreground="@android:drawable/arrow_down_float"
                    android:foregroundGravity="center_vertical|right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.666"
                    app:layout_constraintStart_toEndOf="@+id/textView18"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="316dp"
                    android:fontFamily="@font/poppins"
                    android:text="Title"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editAmount" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="62dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="290dp"
                    android:fontFamily="@font/poppins"
                    android:text="Amount"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinnerCategory" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="335dp"
        android:layout_height="33dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Add  Income / Expenses"
        android:textAlignment="center"
        android:textColor="#1E2E0D"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="43dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="#99D0C3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />
</androidx.constraintlayout.widget.ConstraintLayout>