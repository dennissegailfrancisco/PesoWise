<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99D0C3" >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="407dp"
        android:layout_height="699dp"
        android:layout_marginBottom="-25dp"
        android:background="#F1FFF3"
        app:cardBackgroundColor="#F1FFF3"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="421dp"
                android:layout_height="107dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="40dp"
                        android:text="home"
                        app:icon="@drawable/transaction"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/button5"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:text="add"
                        app:icon="@drawable/add"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/button6"
                        app:layout_constraintHorizontal_bias="0.906"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="40dp"
                        android:text="transac"
                        app:icon="@drawable/transaction"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.875"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="44dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/poppins"
                    android:text="Date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editTextText4"
                    android:layout_width="288dp"
                    android:layout_height="84dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="20dp"
                    android:background="#DFF7E2"
                    android:ems="10"
                    android:hint="Enter Message"
                    android:inputType="text"
                    android:singleLine="false"
                    android:textColor="#1E2E0D"
                    android:textSize="15sp"
                    app:circularflow_defaultRadius="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextText5" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="162dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="122dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="122dp"
                    android:backgroundTint="#FFF7E7"
                    android:text="Save"
                    android:textColor="#1E2E0D"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextText4" />

                <EditText
                    android:id="@+id/editTextText3"
                    android:layout_width="285dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="8dp"
                    android:background="#DFF7E2"
                    android:ems="10"
                    android:hint="Amount"
                    android:inputType="text"
                    android:textSize="15sp"
                    app:circularflow_defaultRadius="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" />

                <EditText
                    android:id="@+id/editTextText5"
                    android:layout_width="285dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="4dp"
                    android:background="#DFF7E2"
                    android:ems="10"
                    android:hint="Title"
                    android:inputType="text"
                    android:textSize="15sp"
                    app:circularflow_defaultRadius="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView17" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="68dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="54dp"
                    android:layout_marginTop="19dp"
                    android:fontFamily="@font/poppins"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner"
                    tools:text="Amount" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="68dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="36dp"
                    android:fontFamily="@font/poppins"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextText3"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="54dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins"
                    android:text="Category"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextText" />

                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="285dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="8dp"
                    android:background="#DFF7E2"
                    android:ems="10"
                    android:hint="date"
                    android:inputType="datetime"
                    android:textSize="15sp"
                    app:circularflow_defaultRadius="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="287dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="54dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="66dp"
                    android:background="#DFF7E2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="170dp"
        android:layout_height="36dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Add Expenses"
        android:textAlignment="center"
        android:textColor="#1E2E0D"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="43dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="#99D0C3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />
</androidx.constraintlayout.widget.ConstraintLayout>